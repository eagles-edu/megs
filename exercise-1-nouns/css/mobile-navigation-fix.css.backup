/* Mobile Navigation Fix for MEGS Educational Platform
 * Addresses responsive navigation stacking behavior
 * Ensures sidebar accessibility across all screen sizes
 */

/* === Mobile Navigation Enhancement === */

/* Hamburger Menu Button - Initially hidden */
.mobile-menu-toggle {
  background: var(--primary-color, #2c5530);
  border: none;
  border-radius: 4px;
  box-shadow: 0 2px 6px rgb(0 0 0 / 20%);
  color: white;
  cursor: pointer;
  display: none;
  font-size: 18px;
  height: 44px;
  padding: 0;
  position: fixed;
  right: 20px;
  top: 15px;
  transition: all 0.3s ease;
  width: 44px;
  z-index: 1050;
}

.mobile-menu-toggle:hover {
  background: var(--secondary-color, #1e3a23);
  transform: scale(1.05);
}

.mobile-menu-toggle:focus {
  outline: 2px solid var(--accent-color, #4a9d5a);
  outline-offset: 2px;
}

/* Hamburger icon styling */
.mobile-menu-toggle::before {
  content: '☰';
  display: block;
  line-height: 1;
}

.mobile-menu-toggle.open::before {
  content: '✕';
}

/* Mobile Overlay for navigation */
.mobile-nav-overlay {
  background: rgba(0 0 0 / 50%);
  display: none;
  height: 100%;
  left: 0;
  opacity: 0;
  position: fixed;
  top: 0;
  transition: opacity 0.3s ease;
  width: 100%;
  z-index: 1040;
}

.mobile-nav-overlay.active {
  opacity: 1;
}

/* === Responsive Navigation Behavior === */

/* Tablet and small desktop adjustments (768px - 979px) */
@media (width >= 768px) and (width <= 979px) {
  #sidebar {
    width: 180px;
  }

  #sidebar .span2 {
    width: 100%;
  }

  #content {
    margin-left: 200px;
    width: calc(100% - 220px);
  }
}

/* Mobile devices (767px and below) */
@media (width <= 767px) {
  /* Show mobile menu button */
  .mobile-menu-toggle {
    display: block;
  }

  /* Transform sidebar into slide-out menu */
  #sidebar {
    background: white;
    border-right: 1px solid var(--border-color, #ddd);
    box-shadow: 2px 0 10px rgb(0 0 0 / 10%);
    height: 100vh;
    left: -280px;
    overflow-y: auto;
    padding: 60px 0 20px;
    position: fixed;
    top: 0;
    transition: transform 0.3s ease-in-out;
    width: 280px;
    z-index: 1045;
}

  #sidebar.mobile-nav-open {
    transform: translateX(280px);
  }

  /* Make main content full width on mobile */
  #content {
    margin-left: 0;
    padding: 20px 15px;
    width: 100%;
  }

  /* Fix row-fluid behavior on mobile */
  .row-fluid {
    display: block;
  }

  .row-fluid [class*='span'] {
    display: block;
    float: none;
    margin-bottom: 20px;
    margin-left: 0;
    width: 100%;
}

  /* Header adjustments for mobile menu */
  .header {
    position: relative;
    padding-right: 60px; /* Make space for hamburger button */
  }

  /* Ensure navigation menu items are touch-friendly */
  #sidebar .accordion-menu a {
    border-bottom: 1px solid var(--border-light, var(-));
    display: block;
    line-height: 1.4;
    min-height: 44px;
    padding: 12px 16px;
    text-decoration: none;
}

  #sidebar .accordion-menu li {
    margin: 0;
  }

  /* Improve touch targets for accordion buttons */
  #sidebar .menu-button {
    align-items: center;
    display: flex;
    height: 44px;
    justify-content: center;
    width: 44px;
}

  /* Accessibility improvements */
  #sidebar .menu-link a:focus {
    background: var(--highlight-bg, #f8f9fa);
    outline: 2px solid var(--accent-color, #4a9d5a);
    outline-offset: -2px;
}
}

/* Very small mobile devices (480px and below) */
@media (width <= 480px) {
  .mobile-menu-toggle {
    font-size: 16px;
    height: 40px;
    right: 15px;
    top: 10px;
    width: 40px;
  }

  #sidebar {
    left: -100%;
    width: 100%;
  }

  #sidebar.mobile-nav-open {
    transform: translateX(100%);
  }

  .header .brand {
    max-width: calc(100% - 60px);
  }

  #content {
    padding: 15px 10px;
  }
}

/* Prevent body scroll when mobile menu is open */
body.mobile-nav-open {
  overflow: hidden;
}

/* Enhanced accessibility for screen readers */
.mobile-menu-toggle[aria-expanded="true"] + .mobile-nav-overlay {
  display: block;
}

/* Focus trap for mobile navigation */
#sidebar.mobile-nav-open .accordion-menu a:first-child {
  /* Focus will be programmatically set to first menu item */
}

/* Animation performance optimizations */
@media (prefers-reduced-motion: reduce) {
  .mobile-menu-toggle,
  #sidebar,
  .mobile-nav-overlay {
    transition: none;
  }
}