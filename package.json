{
  "name": "megs",
  "version": "1.0.0",
  "description": "legacy code update 2025",
  "private": false,
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "engines": {
    "node": "=20"
  },
  "scripts": {
    "start": "bash scripts/startup-new.sh",
    "migrate:legacy": "node scripts/migrate-legacy-to-persistence.js --apply",
    "migrate:legacy:dry": "node scripts/migrate-legacy-to-persistence.js",
    "format": "prettier . --write",
    "fmt:html": "prettier --parser html --write \"**/*.{html,htm}\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:html-stylish": "html-validate --formatter stylish \"**/*.{html,htm}\"",
    "lint:html": "html-validate \"**/*.{html,htm}\"",
    "lint:html:fix": "html-validate \"**/*.{html,htm}\" --fix",
    "lint:js": "eslint \"**/*.{js,mjs,cjs}\"",
    "lint:js:fix": "eslint \"**/*.{js,mjs,cjs}\" --fix",
    "lint:css": "stylelint \"**/*.{css,scss,less}\"",
    "lint:css:fix": "stylelint \"**/*.{css,scss,less}\" --fix",
    "fix:void-selfclosing": "node scripts/fix-void-selfclosing.js",
    "heartbeat:start": "node scripts/session-heartbeat.js --start",
    "heartbeat:stop": "node scripts/session-heartbeat.js --stop",
    "log:history": "node scripts/log-history.js note",
    "log:decision": "node scripts/log-history.js decision",
    "log:error": "node scripts/log-history.js error",
    "log:close": "node scripts/log-history.js close",
    "diagnose": "node scripts/diagnose.js",
    "verify:prototype": "node scripts/verify-prototype.js",
    "verify:live": "node scripts/verify-live.js",
    "smoke:pages": "node scripts/smoke-pages.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eagles-edu/megs.git"
  },
  "keywords": [
    "ESL, English, Grammar, Language, Learning, Education, Teaching, ESL Teaching, ESL Learning, English Grammar, English Language, English Learning, English Teaching, Education Technology, EdTech, Online Learning, Digital Education, Interactive Learning, Language Skills"
  ],
  "author": "Phan Mem Minh Son",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eagles-edu/megs/issues"
  },
  "homepage": "https://github.com/eagles-edu/megs#readme",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "html-validate": "^10.0.0",
    "html-validate-markdown": "^5.1.0",
    "html-validate-vue": "^7.3.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^36.0.0",
    "jsdom": "^24.1.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "cheerio": "^1.1.2",
    "css-declaration-sorter": "^7.2.0",
    "cssnano": "^7.1.1",
    "dotenv": "^17.2.1",
    "postcss": "^8.5.6"
  }
}
