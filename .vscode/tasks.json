{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format: Prettier (all)",
      "type": "npm",
      "script": "format",
      "problemMatcher": []
    },
    {
      "label": "Format: HTML (Prettier only)",
      "type": "npm",
      "script": "fmt:html",
      "problemMatcher": []
    },
    {
      "label": "Lint: HTML (html-validate)",
      "type": "npm",
      "script": "lint:html",
      "problemMatcher": []
    },
    {
      "label": "Lint: JS (ESLint)",
      "type": "npm",
      "script": "lint:js",
      "problemMatcher": []
    },
    {
      "label": "Fix: JS (ESLint --fix)",
      "type": "npm",
      "script": "lint:js:fix",
      "problemMatcher": []
    },
    {
      "label": "Lint: CSS (Stylelint)",
      "type": "npm",
      "script": "lint:css",
      "problemMatcher": []
    },
    {
      "label": "Fix: CSS (Stylelint --fix)",
      "type": "npm",
      "script": "lint:css:fix",
      "problemMatcher": []
    },
    {
      "label": "Startup: Ingest + Heartbeat",
      "type": "npm",
      "script": "start",
      "problemMatcher": [],
      "runOptions": { "runOn": "folderOpen" }
    },
    {
      "label": "Shutdown: Stop Heartbeat (auto)",
      "type": "shell",
      "command": "node scripts/vscode-watchdog.js",
      "problemMatcher": [],
      "runOptions": { "runOn": "folderClose" }
    },
    {
      "label": "Log: Decision",
      "type": "npm",
      "script": "log:decision",
      "problemMatcher": [],
      "args": ["${input:decisionSummary}", "${input:decisionDetails}"]
    },
    {
      "label": "Log: Error",
      "type": "npm",
      "script": "log:error",
      "problemMatcher": [],
      "args": ["${input:errorSummary}", "${input:errorDetails}"]
    },
    {
      "label": "Log: Close Session",
      "type": "npm",
      "script": "log:close",
      "problemMatcher": [],
      "args": ["${input:closeSummary}"]
    }
  ],
  "inputs": [
    {
      "id": "decisionSummary",
      "type": "promptString",
      "description": "Decision summary",
      "default": "Set policy"
    },
    {
      "id": "decisionDetails",
      "type": "promptString",
      "description": "Decision details (JSON)",
      "default": "{\"rationale\":\"...\"}"
    },
    {
      "id": "errorSummary",
      "type": "promptString",
      "description": "Error summary",
      "default": "Unexpected failure"
    },
    {
      "id": "errorDetails",
      "type": "promptString",
      "description": "Error details (JSON)",
      "default": "{\"code\":0}"
    },
    {
      "id": "closeSummary",
      "type": "promptString",
      "description": "Session close summary",
      "default": "Session ended"
    }
  ]
}
